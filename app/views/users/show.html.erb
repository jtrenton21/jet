<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h4>  
     <%= @user.gender %>
     <%= @user.age %>
     
      </h4>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Status (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
<div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.workouts.any? %>
      <h3>Workouts (<%= @user.workouts.count %>)</h3>
      <ol class="workouts">
        <%= render @workouts %>
      </ol>
      <%= will_paginate @workouts %>
    <% end %>
</div>